{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title_es": {
      "type": "string"
    },
    "title_en": {
      "type": "string"
    },
    "slug_es": {
      "type": "uid",
      "targetField": "title_es"
    },
    "slug_en": {
      "type": "uid",
      "targetField": "title_en"
    },
    "content_es": {
      "type": "richtext"
    },
    "content_en": {
      "type": "richtext"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "published_es": {
      "type": "boolean",
      "default": false
    },
    "published_en": {
      "type": "boolean",
      "default": false
    },
    "published_at_es": {
      "type": "datetime"
    },
    "published_at_en": {
      "type": "datetime"
    },
    "category": {
      "via": "articles",
      "model": "category"
    },
    "seo_es": {
      "type": "component",
      "repeatable": false,
      "component": "seo.seo"
    },
    "seo_en": {
      "type": "component",
      "repeatable": false,
      "component": "seo.seo"
    }
  }
}
