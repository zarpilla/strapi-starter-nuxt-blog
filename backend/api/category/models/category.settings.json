{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "categories",
  "info": {
    "name": "category"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name_es": {
      "type": "string"
    },
    "slug_es": {
      "type": "uid",
      "targetField": "name_es"
    },
    "name_en": {
      "type": "string"
    },
    "slug_en": {
      "type": "uid",
      "targetField": "name_en"
    },
    "articles": {
      "collection": "article",
      "via": "category"
    },
    "title_es": {
      "type": "string"
    },
    "title_en": {
      "type": "string"
    },
    "description_es": {
      "type": "richtext"
    },
    "description_en": {
      "type": "richtext"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "icon": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
